<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="360dp"/>
    <ImageView
        android:id="@+id/ivBorder"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/darkerOrange" />
    <ScrollView
        android:layout_below="@id/ivBorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightOrange">
            <TextView
                android:textStyle="bold"
                android:id="@+id/textView3"
                android:layout_width="109dp"
                android:layout_height="18dp"
                android:text="Kereta Api"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black" />
            <Spinner
                android:id="@+id/spinnerKereta"
                android:layout_width="318dp"
                android:layout_height="30dp"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="352dp"
                android:layout_below="@id/textView3"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:layout_marginTop="15px"
                android:layout_marginBottom="20px"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/textView4"
                android:layout_width="170dp"
                android:layout_height="24dp"
                android:text="Tempat Pemberhentian"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:layout_below="@id/spinnerKereta"/>

            <Spinner
                android:id="@+id/spinnerStasiun"
                android:layout_width="318dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:layout_below="@id/textView4"/>


            <RelativeLayout
                android:id="@+id/rl_here_to_selected"
                android:layout_below="@id/spinnerStasiun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_here_to_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_below="@id/tv_here_to_selected"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/textView"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="Waktu"
                            android:textAlignment="center" />
                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/tv_waktu"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="- : - : -"
                            android:textAlignment="center"
                            android:layout_below="@id/textView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/textView5"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="Jarak"
                            android:textAlignment="center"/>
                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/tv_jarak"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="- km"
                            android:layout_below="@id/textView5"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_here_to_last"
                android:layout_below="@id/rl_here_to_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_here_to_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Dari sini ke stasiun terakhir"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_below="@id/tv_here_to_last"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/textView6"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="Waktu"
                            android:textAlignment="center" />
                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/tv_waktu_total"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="- : - : -"
                            android:textAlignment="center"
                            android:layout_below="@id/textView6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/textView7"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="Jarak"
                            android:textAlignment="center"/>
                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/tv_jarak_total"
                            android:layout_width="106dp"
                            android:layout_height="22dp"
                            android:text="- km"
                            android:layout_below="@id/textView7"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="Kecepatan"
                android:textAlignment="center"
                android:layout_below="@id/rl_here_to_last"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_kecepatan"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="- km/jam"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView2"
                android:textColor="@color/black"
                />

            <View
                android:layout_below="@id/tv_kecepatan"
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
